[Unit]
Description=MySQL
After=docker.service
Requires=docker.service

[Service]
Restart=always
RestartSec=15s
TimeoutStartSec=0

ExecStartPre=-/usr/bin/docker kill mysql
ExecStartPre=-/usr/bin/docker rm mysql
ExecStartPre=/usr/bin/docker pull mysql:5.6
ExecStart=/usr/bin/docker run --name mysql -e MYSQL_ROOT_PASSWORD=secret -p 3306:3306 -t mysql:5.6
ExecStop=/usr/bin/docker stop mysql
ExecStop=/usr/bin/docker rm mysql

[X-Fleet]
MachineMetadata=boxrole=homer
Global=True
